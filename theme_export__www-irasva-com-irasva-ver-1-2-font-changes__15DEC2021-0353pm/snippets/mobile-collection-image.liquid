{% assign collection_handle = collection.handle %}
{% assign mobile_img = collection_handle | append:'-mobile.jpg' | file_url %}
{% if collection.metafields.collection['mobileBanner'] != blank %}
<img class="mobile-collection-banner lazyload {{ settings.image_loading_style }} hidden-xs" 
     src="{{ collection.metafields.collection['mobileBanner'] }}"/>
{% else %}
<img class="mobile-collection-banner lazyload {{ settings.image_loading_style }} hidden-xs" 
     src="https://cdn.shopify.com/s/files/1/0312/7689/2298/files/rsz_rings_banner2x.jpg?v=1587295994"/>
{% endif %}