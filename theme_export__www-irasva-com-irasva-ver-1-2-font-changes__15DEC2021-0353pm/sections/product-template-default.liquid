        {% assign des = product.description %}
        {% if des contains '[custom tab]'%}
        {% assign des = des | split:'[custom tab]' | first | split:'<iframe' | first %}
        {% endif %}
        {% endif %}

        {% if section.settings.show_desc == 'short' %}

        {% if product.metafields.c_f['Short Description'] %}
        {% assign des = product.metafields.c_f['Short Description'] %}
        {% assign word_numbeer = 100000000000000 %}
        {% else %}
        {% assign word_numbeer = 50 %}
        {% endif %}

        <div class="estimate-class desktop-xs">
          {% if long_shipping %}
          <span class="estimate_time">Estimated delivery: Up to 15 working days.</span>
          {% else %}
          <span class="estimate_time">Estimated delivery: 3-4 working days.</span>
          {% endif %}
        </div>
        {% comment %}
        {% if customization_product %}
        {% if product.description contains "<!--split-->" %}
        <div class="short-description text1">
          {{ product.description | split: '</p>' | first | strip_html }}
        </div>
        {% else %}
        <div class="short-description text2">
          {{ des | split: '</p>' | first | strip_html | replace: '&nbsp;', ' ' | truncatewords: word_numbeer }}
        </div>
        {% endif %}
        {% else %}
        <div class="short-description text3">
          {{ des | split: '[lang2]' | first | strip_html | replace: '&nbsp;', ' ' | truncatewords: word_numbeer }}
        </div>
        {% endif %}
        {% endcomment %}

        {% endif %}

