        {% if collection.handle == "elements" or collection.handle == "lady-earth"  %}
        {% assign elements = true %}
        {% break %}
        {% endif %}
        {% endfor %}
        {% if elements %}
        <!--         <input type="hidden" name="properties[discount]" value="20%"> -->
        {% else %}
        <!--         <input type="hidden" name="properties[discount]" value="10%"> -->
        {% endif %}

        <div class="mob-bttns">
          {%- if product.tags contains "No Customization" -%}
          {% else %}
          <div class="size-n-metal">
            {% if product.type contains "Ring" or product.type contains "Bangle" %}
