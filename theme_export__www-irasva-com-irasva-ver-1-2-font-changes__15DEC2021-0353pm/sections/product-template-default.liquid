                {% elsif product.type contains 'Ring' %}
                <a href="/pages/ring-size-guide" target="_blank" data-target="#size_chart" class="size-chart-open-popup">
                  {% include 'multilang' with settings.size_guide_text %}
                </a>
                {% endif %}
              </div>
              {% endif %}
            </div>
            {% endif %}

            <div class="metal">
              {% include 'metal-filter' %}
            </div>
          </div>
          {% endif %}
