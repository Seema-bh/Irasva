                {{ section.settings.text_product_type | split: '|' | first }}
              </label>
              <label class="lang2">
                {{ section.settings.text_product_type | split: '|' | last }}
              </label>
              {% else %}
              <label>
                {{ section.settings.text_product_type | split: '|' | first }}
              </label>
              {% endif %}
              {% endif %}
              {% if settings.enable_multilang %}
              <span class="lang1">
                {{ product.type | split: '|' | first }}
              </span>
              <span class="lang2">
                {{ product.type| split: '|' | last }}
              </span>
              {% else %}
              <span>
                {{ product.type | split: '|' | first }}
              </span>
              {% endif %}
            </div>
            {% endif %}
          </div>
          {% endif %}
