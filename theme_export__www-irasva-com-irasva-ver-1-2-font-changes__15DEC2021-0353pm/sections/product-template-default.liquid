            {% include 'iwish_v2' with 'iwishproduct' %}
            {% if section.settings.display_product_detail_share %}
            {% include 'share' with product %}
            {% endif %}
            <div class="product-photo-container slider-for">
              {% for image in product.images %}
              <div class="thumb filter-{{ image.alt | handle }}"  id="{{ image.alt | handle }}">
                <a data-zoom class="fancybox" rel="gallery1" href="{{ image | img_url: 'original' }}" data-fancybox="images">
