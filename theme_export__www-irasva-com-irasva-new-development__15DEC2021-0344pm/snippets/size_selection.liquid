<select id="new_select_size" style="margin-left:0px;">
</select>

<script>
    $(document).ready(function(){
        $.ajax({
            type: 'GET',
            url: ADMIN_URL + "get-size-data",
            success: function(respObj){
                if("{{ size_selection }}" == "Ring" ){
                    var data = respObj.ring_data;
                }else{
                    var data = respObj.bangle_data;
                }
                var ele_html = "";
                $.each(data, function(k,v){
                    if(v.size == '13'){
                        ele_html += "<option value='"+ v.size +"' data-ratio='" + v.ratio + "' selected='selected'>"+ v.size +"</option>";
                    }else{
                        ele_html += "<option value='"+ v.size +"' data-ratio='" + v.ratio + "'>"+ v.size +"</option>";
                    }
                });
                $('#new_select_size').html(ele_html);
            },
        });
    });
</script>