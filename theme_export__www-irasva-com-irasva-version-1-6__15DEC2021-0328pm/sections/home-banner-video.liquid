<div class="image-with-video-overlay">
  <div class="container">
  {% if section.settings.spotlight_block_title != blank %}
  <div class="widget-title{% if section.settings.title_style == 'style_2' %} not-before{% endif %}{% unless section.settings.spotlight_block_des != blank %} no-des{% endunless %}">   
    <h3 class="box-title">
      <span class="title"> 
        <span>
        {{ section.settings.spotlight_block_title }}
      </span>
      </span>
    </h3>
    {% if section.settings.spotlight_block_des != blank %}
    <p class="banner-des">
      {{ section.settings.spotlight_block_des }}
    </p>        
    {% endif %}
          {% if section.settings.link_text1 != blank  %}
      <a href="{{ section.settings.link1 }}" class="banner-button btn hidden-xs">
        {{ section.settings.link_text1 }}<img src="https://cdn.shopify.com/s/files/1/0312/7689/2298/files/Forward_Arrow.svg?244">
      </a>
      {% endif %}
        </div>
  {% endif %}
  <div class="first-two">
  <div class="first_half_image col-sm-6">
    <div class="img-box">
      <a href="{{ section.settings.link }}" class="">
        {% if section.settings.image != blank %}
		 <img src="//cdn.shopify.com/s/files/1/0312/7689/2298/{{ section.settings.image }}"> 
        {% endif %}
      </a>
    </div>
  </div>

  <div class="second_half_video col-sm-6">
    <div class="video-popup">
      <button type="button" class="btn"><img src="//cdn.shopify.com/s/files/1/0312/7689/2298/{{ section.settings.image11 }}"> </button>
       <p class="about-the-brand"><img src="https://cdn.shopify.com/s/files/1/0312/7689/2298/files/play-button.png?v=1585651178" data-toggle="modal" data-target="#size-chart"></p>
      <!-- Size Chart Start here -->

      <div class="remodal" data-remodal-id="size-chart{{product_id}}" data-remodal-options="hashTracking: false">
        <a data-remodal-action="close" class="remodal-close"></a>
        <div class="details-page-size-chart">
          <div class="modal fade" id="size-chart" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>

                </div>
                <div class="modal-body">

                  <iframe width="100%" data-video-id="{{ section.settings.video_link3 }}" height="100%" src="https://www.youtube.com/embed/{{ section.settings.video_link3 }}?enablejsapi=1&rel=0&autoplay=0" frameborder="0" allowfullscreen="" volume="0"></iframe>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div> 
    </div>
    <div class="video-title">
      <span class="block-title">{{ section.settings.title3 }}</span>
    </div>
  </div> 
  </div>
  
  <div class="first_half_text col-sm-4">
    <div class="img-box">
      {% if section.settings.spotlight_block_des2 != blank %}
      <p class="description">
        {{ section.settings.spotlight_block_des2 }}
      </p>        
      {% endif %}
      {% if section.settings.link_text1 != blank  %}
      <a href="{{ section.settings.link1 }}" class="banner-button btn">
        {{ section.settings.link_text1 }}
      </a>
      {% endif %}
    </div>
  </div>
  </div>
</div>

<style>
  .video-popup {text-align: center; position: relative;}
  .about-the-brand {
    position: absolute;
    transform: translate(-50%,-50%);
    top: 50%;
    left: 50%;
    font-size: 30px;
    color: #fff;
    width: auto;
  }
  .about-the-brand img { 
    padding: 4px;
    background-color: #fff;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    margin-top: 20px;
    transition: transform .5s;
    cursor: pointer;
  }
  .about-the-brand img:hover {
    transform: scale(1.2);
  }
</style>

