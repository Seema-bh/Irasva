    letter-spacing: 0.05em;
    margin-bottom: 25px;
    padding-top:25px;
    text-align:center;
  }
  .desktop{
    border-radius: 0px;
  }
  {% comment %}
  .form-heading h3.title{
    font-size: {{settings.body_font_size | plus: 2}}px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 26px;
  }
  .page-heading {
    text-align: center;
    position: relative;
    max-width: 70%;
    margin : 0 auto;
    margin-bottom: 55px;
  }
  .page-heading h2{
    text-transform: uppercase;
    font-weight: 700;
    letter-spacing: 0.05em;
    font-size: 30px;
    margin-bottom: 22px;
  }
.page-heading:before {
    content:'';
    display:block;
    width: 30%;
    max-width: 315px;
    height:1px;
    background-color: #a6a6a6;
    position: absolute;
    bottom:0;
    left:50%;
    -webkit-transform: translateX(-50%);
    -ms-transform: translateX(-50%);
    -o-transform: translateX(-50%);
    transform: translateX(-50%);
  }
  .page-heading .des{
    padding-bottom: 18px;
    margin-bottom: 0px;
  }


 .info .info-content{
    line-height: {{settings.body_font_size | plus:12}}px;
  }
  .info .top-content .info-content{
    margin-bottom: 25px;
  }
  
  .info .top-content .btn{
    background-color: {{section.settings.email_button_bgc}};
    color: {{section.settings.email_button_txtc}};
    border-color: {{section.settings.email_button_bdc}};
    margin-top: 0;
  }
  .info .top-content .btn:hover{
    background-color: {{section.settings.email_button_bgc_h}};
    color: {{section.settings.email_button_txtc_h}};
    border-color: {{section.settings.email_button_bdc_h}};
  }
.contact-form input[type="text"],.contact-form input[type="tel"],.contact-form input[type="email"],.contact-us-page .form-group textarea{
    max-width:630px;
  }
  {% endcomment %}
  @media (max-width: 820px){
   .subln1 {
      font-weight: 600; 
      letter-spacing: 1.5px; 
      }
    #contact-us .inner 
    {
      padding: 0px 0px;
      }
    .info .inner {
       padding: 0px 0px;
        }
    .subln{
    font-size: 11px;
    padding-top: 10px;
    margin-top: 3px;
    letter-spacing: 1.65px;
       }
    .dispimg
    {
      width: 75%; 
      margin: 0 auto;
       }
    .info {
          width: auto;
      max-width: 100%;
      text-align: center;
      margin-left: 15%;
      height: auto;
      order: 2;
      -webkit-order: 2;
      background-image: none;
      margin: 0 auto;
    }
    .desktop{display: none;}
    .mobile{display: block;
      width: 100%;}
    .head ,.dispnum ,.subln1{color: #005272; }
    .head {
      font-weight: 700;
      text-transform: capitalize;
      font-size: 25px;
      margin-top: 12%;
      padding-bottom: 8%;}
    #contact-us .main-content{
