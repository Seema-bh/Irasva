
<div class="contact-us-page">
  <div class="container">
    {% comment %}
    {% include 'breadcrumb' %}
    <header class="page-heading">
      {% if settings.enable_multilang and section.settings.contact_title contains '|' %}
      <h2 class="lang1">
        {{ section.settings.contact_title | split: '|' | first }}
      </h2>
      <h2 class="lang2">
        {{ section.settings.contact_title | split: '|' | last }}
      </h2>
      {% else %}
      <h2>
        {{ section.settings.contact_title | split: '|' | first }}
      </h2>
      {% endif %}
      {% include 'multilang-block' with section.settings.contact_text_desc, class:'des' %}
    </header> 
    {% endcomment %}
    {% if page.content != blank %}
    <div class="rte">
      {{ page.content }}
    </div>
    {% endif %}
    <div class="row">
      {% comment %}
      <div class="col-md-12 col-lg-8 col-xl-7 form-contact">     
        <div class="form-heading">
          <h3 class="title">
            {% include 'multilang' with section.settings.form_title%}
          </h3>
          <p>
            {% include 'multilang' with section.settings.form_subtitle %}
          </p>  
        </div>
        {% form 'contact' %}
        {% comment %}
        Successful message
        {% endcomment %}
        {% if form.posted_successfully? %}
        <p class="note form-success" {% if settings.enable_multilang %}data-translate="contact.form.post_success"{% endif %}>
          {{ 'contact.form.post_success' | t }}
        </p>
        {% endif %}
        {{ form.errors | default_errors }}
        <div id="contactFormWrapper">          
          <div class="form-group">
            <label for="contactFormName">
              <span {% if settings.enable_multilang %}data-translate="contact.form.name"{%endif%}>
                {{ 'contact.form.name' | t }}
              </span>
            </label>
            <input type="text" id="contactFormName" name="contact[name]" autocapitalize="words" placeholder="{{ section.settings.contact_your_name }}">
          </div>
          <div class="form-group">
            <label for="contactFormPhone">
              <span {% if settings.enable_multilang %}data-translate="contact.form.phone"{%endif%}>
                {{ 'contact.form.phone' | t }}
              </span>
            </label>
            <input type="tel" name="contact[phone]" id="contactFormPhone" pattern="[0-9]*" placeholder="{{ section.settings.contact_phone_number }}">
          </div>
          <div class="form-group">
            <label for="contactFormEmail">
              <span {% if settings.enable_multilang %}data-translate="contact.form.email"{%endif%}>
                {{ 'contact.form.email' | t }}
              </span>
              <em>*</em>
            </label>
            <input type="email" name="contact[email]" id="contactFormEmail" autocorrect="off" autocapitalize="off" placeholder="{{ section.settings.contact_your_email }}">
          </div>
          <div class="form-group">
            <label for="contactFormMessage">
              <span {% if settings.enable_multilang %}data-translate="contact.form.message"{%endif%}>
                {{ 'contact.form.message' | t }}
              </span>
              <em>*</em>
            </label>
            <textarea rows="8" name="contact[body]" id="contactFormMessage" {% if settings.enable_multilang %}data-translate="contact.form.placeholder_message" translate-item="placeholder"{%endif%} placeholder="{{ 'contact.form.placeholder_message' | t }}"></textarea>
          </div>
          <input type="submit" class="btn" {% if settings.enable_multilang %}data-translate="contact.form.submit_contact"{%endif%} value="{{ 'contact.form.submit_contact' | t }}">
        </div>
        {% endform %}
      </div>
      {% endcomment %}
      {% if section.settings.display_location %}
      <div class="info">
        <div class="inner">
          {% comment %} <img src="https://cdn.shopify.com/s/files/1/0312/7689/2298/{{ section.settings.image }}">{% endcomment%}
          {% if section.settings.top_title != '' and section.settings.top_content != '' %}
          <div class="info-block top-content">
            {% if section.settings.top_title != '' %}
            <h3 class="title">
              {% include 'multilang' with section.settings.top_title %}
            </h3>
            {% if section.settings.top_content != '' %}
            {% include 'multilang-block' with section.settings.top_content, class: 'info-content'  %}
            {% endif %}
            {% endif %}
            <a href="mailto:{{section.settings.email}}" class="btn">
              {% include 'multilang' with section.settings.email_button %}
            </a>
          </div>
          {% endif %}
          <div class="info-block">
            <p class="head desktop">{{ section.settings.title1 }}</p>  
            <p class="subln">{{ section.settings.feedback }}</p>
            <p class="dispnum">{{ section.settings.number }}</p>
            <p class="subln1">{{ section.settings.subline }}</p>
            <p class="subln">{{ section.settings.Whatsapp }}</p>
            <p class="dispnum">{{ section.settings.Moilenumber }}</p>
            <p class="subln1">{{ section.settings.time }}</p>
            <p class="subln">{{ section.settings.Email1 }}</p>
            <p class="dispnum">{{ section.settings.mailid }}</p>
            <p class="subln">{{ section.settings.enquiry }}</p>
            <p class="dispnum">{{ section.settings.marketingmail }}</p>
            {% if section.settings.bot_content != '' and section.settings.bot_title != '' %}
            {% if section.settings.bot_title != '' %}
            <h3 class="title">
              {% include 'multilang' with section.settings.bot_title %}
            </h3>
            {% endif %}
            {% if section.settings.bot_content != '' %}
            {% include 'multilang-block' with section.settings.bot_content, class: 'info-content' %}
            {% endif %}
            {% endif %}
          </div>
        </div>
      </div>
      {% endif %}
      <div class="dispimg">
        <p class="head mobile">{{ section.settings.title1 }}</p>  
        <img src="https://cdn.shopify.com/s/files/1/0312/7689/2298/{{ section.settings.desktopimg }}" class="desktop">
        <img src="https://cdn.shopify.com/s/files/1/0312/7689/2298/{{ section.settings.mobileimg }}" class="mobile"> 
      </div>
    </div>     
  </div>
</div>    

<style>
